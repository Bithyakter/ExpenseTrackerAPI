@model ExpenseTracker.Web.Models.ExpenseDTO

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit Expense</h4>

<hr />

<div class="row content-wrapper content">
    <div class="col-md-8">
        <section>
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Edit Expense</h3>
                </div>

                <form method="post" role="form" asp-action="Edit">
                    <div class="box-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="ExpenseID" type="hidden"/> 
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryName" class="control-label"></label>
                            <select asp-for="CategoryID" class="form-control">
                                <option value="">-- Select Category --</option>
                                @foreach(var item in Model.CategoryDropDownList)
                                {
                                    <option value="@item.CategoryID">
                                        @item.CategoryName
                                    </option>
                                }
                            </select> 
                        </div>
                        <div class="form-group">
                            <label asp-for="Amount" class="control-label"></label>
                            <input asp-for="Amount" class="form-control" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ExpenseDate" class="control-label"></label>
                            <input asp-for="ExpenseDate" class="form-control" />
                            <span asp-validation-for="ExpenseDate" class="text-danger"></span>
                        </div>  
                    </div>

                     <div class="box-footer">
                        <div class="col-lg-4 col-md-4 pull-right form-group">
                            <button class="btn btn-primary btn-block" value="Save" type="submit">
                                <i class="fa fa-plus"></i>
                                <span>Update Expense</span>
                            </button>
                        </div>
                        <div class="col-md-2">
                            <a class="form-group btn btn-danger btn-block fa fa-arrow-circle-left" href="/ExpenseUI/Index"><span> Back</span></a>
                        </div>
                    </div>

                </form>
            </div>
         </section>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
