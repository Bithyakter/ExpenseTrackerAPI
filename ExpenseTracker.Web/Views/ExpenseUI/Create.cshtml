@model ExpenseTracker.Web.Models.ExpenseDTO

@{
    ViewData["Title"] = "Create";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://use.fontawesome.com/c7a575b4de.js"></script>

<div class="row content-wrapper content">
    <div class="col-md-8">
        <div>
            <section>
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Create New Expense</h3>
                    </div>
                    <hr />
                        <form role="form" method="post" asp-action="Create">
                            <div class="box-body">
                              <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group">
                                    <label asp-for="CategoryName" class="control-label"></label>
                                        <select asp-for="CategoryID" class="form-control">
                                        <option value="">-- Select Category --</option>
                                        @foreach(var item in Model.CategoryDropDownList)
                                        {
                                            <option value="@item.CategoryID">
                                                @item.CategoryName
                                            </option>
                                        }
                                    </select> 
                                </div>

                                <div class="form-group">
                                    <label asp-for="Amount" class="control-label"></label>
                                    <input asp-for="Amount" class="form-control" />
                                    <span asp-validation-for="Amount" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="ExpenseDate" class="control-label"></label>
                                    <input asp-for="ExpenseDate" class="form-control" />
                                    <span asp-validation-for="ExpenseDate" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="box-footer">
                                <div class="col-lg-4 col-md-4 pull-right form-group">
                                    <button class="btn btn-primary btn-block " value="Create" type="submit">
                                        <i class="fa fa-plus"></i>
                                        <span>Create Expense</span>
                                    </button>
                                </div>
                                <div class="col-md-2">
                                    <a class="form-group btn btn-danger btn-block fa fa-arrow-circle-left" href="/ExpenseUI/Index"><span> Back</span></a>
                                </div>
                            </div>

                       </form>
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
