@model ExpenseTracker.Web.Models.ExpenseCategoryDTO

@{
    ViewData["Title"] = "Create";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<script src="https://use.fontawesome.com/c7a575b4de.js"></script>

<div class="row content-wrapper content">
    <div class="col-md-8">
        <div>
            <section>
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Create Expense Category</h3>
                    </div>
                    <hr />
                        <form role="form" method="post" asp-action="Create">
                            <div class="box-body">
                              <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group">
                                    <label asp-for="CategoryName" class="control-label"></label>
                                    <input asp-for="CategoryName" class="form-control" />
                                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                                </div>

                            </div>

                            <div class="box-footer">
                                <div class="col-lg-4 col-md-4 pull-right form-group">
                                    <button class="btn btn-primary btn-block " value="Create" type="submit">
                                        <i class="fa fa-plus"></i>
                                        <span>Create Category</span>
                                    </button>
                                </div>
                                <div class="col-md-2">
                                    <a class="form-group btn btn-danger btn-block fa fa-arrow-circle-left" href="/ExpenseCategoryUI/Index"><span> Back</span></a>
                                </div>
                            </div>

                       </form>
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
