@model ExpenseTracker.Web.Models.ExpenseCategoryDTO

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

<div class="row content-wrapper content">
    <div class="col-md-8">
        <div>
            <section>
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Create Expense Category</h3>
                    </div>
                    <hr />
                        <form role="form" method="post" asp-action="Create">
                            <div class="box-body">
                              <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group">
                                    <label asp-for="CategoryName" class="control-label"></label>
                                    <input asp-for="CategoryName" class="form-control" placeholder="Category Name" />
                                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                                </div>
                            </div>
                            <br /><br />
                            <div class="box-footer">
                                <div class="col-lg-4 col-md-4 pull-right form-group">
                                    <button class="btn btn-primary btn-block " value="Create" type="submit">
                                        <i class="bi bi-plus-square"></i>
                                        <span>Create Category</span>
                                    </button>
                                </div>
                                <div class="col-md-2">
                                    <a class="form-group btn btn-danger btn-block bi bi-arrow-left-circle-fill" href="/ExpenseCategoryUI/Index"><span> Back</span></a>
                                </div>
                            </div>

                       </form>
                </div>
            </section>
        </div>
    </div>
</div>

