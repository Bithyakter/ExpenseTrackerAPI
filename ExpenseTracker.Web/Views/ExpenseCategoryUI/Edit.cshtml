@model ExpenseTracker.Web.Models.ExpenseCategoryDTO

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

 <!-- Main Div Start -->
<div class="row content-wrapper content">
    <div class="col-md-8 offset-md-2 p-4 bg-light shadow">
       <!--Section START-->
        <section>
            <!-- General form elements -->
            <div class="box box-primary">
                <div class="box-header with-border text-primary">
                    <h3 class="box-title">Edit Category</h3>
                </div>
                  <hr />
                <form method="post" role="form" asp-action="Edit">
                    <!--Box body START-->
                    <div class="box-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                       
                        <div class="form-group">
                            <input asp-for="CategoryID" type="hidden" class="form-control" /> 
                            <input asp-for="DateCreated" type="hidden" class="form-control" />
                            <input asp-for="IsRowDeleted" type="hidden" class="form-control" /> 
                        </div>

                        <div class="form-group">
                            <label asp-for="CategoryName" class="control-label text-secondary"></label>
                            <input asp-for="CategoryName" class="form-control" placeholder="Category Name"/>
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>
                    </div>
                    <!--Box body END-->
                    <br /><br />

                    <!--Box footer START-->
                     <div class="box-footer">
                        <div class="col-lg-4 col-md-4 pull-right form-group">
                            <button class="btn btn-primary btn-block" value="Save" type="submit">
                                <i class="bi bi-file-earmark-plus"></i>
                                <span>Update Category</span>
                            </button>
                        </div>
                        <div class="col-md-2">
                            <a class="form-group btn btn-danger btn-block bi bi-arrow-left-circle-fill" href="/ExpenseCategoryUI/Index"><span> Back</span></a>
                        </div>
                    </div>
                    <!--Box footer END-->
                </form>
            </div>
         </section>
         <!--Section START-->
    </div>
</div>
<!-- Main Div END -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
